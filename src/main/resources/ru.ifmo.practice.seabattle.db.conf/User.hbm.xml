<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ru.ifmo.practice.seabattle.db.User" table="User" catalog="SEABATTLE">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="user_nickname" type="java.lang.String">
            <column name="user_nickname" not-null="true" unique="true" length="20"/>
        </property>
        <property name="email" type="java.lang.String">
            <column name="email" not-null="true" unique="true" length="20"/>
        </property>
        <property name="password" type="java.lang.String">
            <column name="password" not-null="true" length="20"/>
        </property>
    </class>
</hibernate-mapping>