extends ../layouts/main-layout.jade
block title
    title Морской бой | Игра

block content
    section
        .chat
            .chat-messages-area#chat-messages-area
            form.chat-form#chat-form
                input#chat-message.chat-message(type="text" name="chat-message", autocomplete="off")
                input#chat-submit.chat-submit(type="submit" name="chat-submit" value="")
        .section-container.game-section
            .inner
                .intro
                    .game-field.left
                        .user-info 
                        table.game-field-table#player
                            -var n = 0
                            while n < 10
                                - n++
                                tr.game-field-row
                                    -var k = 0
                                    while k < 10
                                        - k++
                                        td.game-field-cell
                                            .game-field-inner.empty
                    
                                                                        
                    .game-field.right
                        .user-info
                        table.game-field-table#enemy
                            -var n = 0
                            while n < 10
                                - n++
                                tr.game-field-row
                                    -var k = 0
                                    while k < 10
                                        - k++
                                        td.game-field-cell
                                            .game-field-inner
                    .clearfix
                    .ships-container 
                        .ship.ship-animation.ship-1#ship11
                        .ship.ship-animation.ship-1#ship12
                        .ship.ship-animation.ship-1#ship13
                        .ship.ship-animation.ship-1#ship14
                        .ship.ship-animation.ship-2#ship21
                        .ship.ship-animation.ship-2#ship22
                        .ship.ship-animation.ship-2#ship23
                        .ship.ship-animation.ship-3#ship31
                        .ship.ship-animation.ship-3#ship32
                        .ship.ship-animation.ship-4#ship41
                    .game-btn-block.left
                        a.game-btn#search Искать противника
                        a.game-btn.inactive#random Расставить корабли
                    .game-btn-block.right
                        a.game-btn#bot Играть с ботом
                        a.game-btn.inactive#confirm Подтвердить расстановку
                    .clearfix
