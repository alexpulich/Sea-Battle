extends ../layouts/main-layout.jade
block title
    title Морской бой | Регистрация

block content
    section
        .section-container.game-section
            .inner
                .intro
                    form.form#registration-form(action="http://46.32.76.190:8000/RegistrationServlet" method="post")
                        .form-header Регистрация
                        .form-line
                            label.form-label(for="login") Логин:
                            .input-wrapper
                                input.form-input(type="text" name="login" id="login" placeholder="Например, winner3000" required)
                        .clearfix
                        .form-line
                            label.form-label(for="email") Эл. почта:
                            .input-wrapper
                                input.form-input(type="email" name="email" id="email" placeholder="Например, winner3000@mail.ru" required)
                        .clearfix
                        .form-line
                            label.form-label(for="password") Пароль:
                            .input-wrapper
                                input.form-input(type="password" name="password" id="password" placeholder="Пароль" required)
                        .clearfix
                        .form-line
                            label.form-label(for="password-confirm") Подтвердите пароль:
                            .input-wrapper
                                input.form-input(type="password" name="password-confirm" id="password-confirm" placeholder="Подтвердите пароль" required)
                        .clearfix
                        .form-line.submit-line
                            input.form-submit(type="submit" name="submit" id="submit" value="Зарегистрироваться")